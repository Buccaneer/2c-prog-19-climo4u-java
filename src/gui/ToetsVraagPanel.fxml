<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.shape.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root style="-fx-border-color: -fx-box-border; -fx-border-width: 1.0; -fx-spacing: 10;" type="BorderPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <HBox style="-fx-background-color: #ccc;" BorderPane.alignment="CENTER">
         <children>
            <TextArea fx:id="txaBeschrijving" prefHeight="0.0" promptText="Beschrijving" style="-fx-background-color: transparent; -fx-border-width: 0;">
               <HBox.margin>
                  <Insets />
               </HBox.margin></TextArea>
            <TextField fx:id="txtPunten" prefHeight="33.0" prefWidth="120.0" promptText="Puntent te verdienen" style="-fx-alignment: center-right; -fx-border-width: 0;" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets left="5.0" />
               </HBox.margin></TextField>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
   </top>
   <bottom>
      <HBox style="-fx-background-color: #ccc;" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnOpslaan" defaultButton="true" mnemonicParsing="false" onAction="#opslaan" text="Opslaan">
               <HBox.margin>
                  <Insets left="16.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="btnVerwijderen" cancelButton="true" mnemonicParsing="false" onAction="#verwijderen" text="Verwijderen">
               <HBox.margin>
                  <Insets left="16.0" />
               </HBox.margin>
            </Button>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
   </bottom>
   <center>
      <Pane fx:id="content" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" left="5.0" right="5.0" top="10.0" />
         </BorderPane.margin></Pane>
   </center>
</fx:root>
